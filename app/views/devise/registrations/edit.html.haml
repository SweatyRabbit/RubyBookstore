%main.container
  %h1.general-title-margin= t('devise.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('devise.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('devise.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .row
        .col-md-5
          = render partial: 'devise/registrations/partials/form', locals: { address: AddressForm.new(current_user.billing_address&.attributes), address_type: :billing }
        .col-md-5.col-md-offset-1
          = render partial: 'devise/registrations/partials/form', locals: { address: AddressForm.new(current_user.shipping_address&.attributes), address_type: :shipping }
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        = render partial: 'devise/registrations/partials/change_email'
        = render partial: 'devise/registrations/partials/change_password'
        = render partial: 'devise/registrations/partials/remove_account'
