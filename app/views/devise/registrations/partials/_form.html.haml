= simple_form_for(address, as: :address, url: address_path, method: :put, html: { id: "#{address_type}_address" },
  defaults: { input_html: { class: "form-control" }, wrapper_html: { class: 'form-group' }}) do |f|
  = render partial: 'devise/registrations/partials/fields', locals: { f: f, address_type: address_type }
  = f.button :submit, t('addresses.save'), class: 'btn btn-default mb-35'
