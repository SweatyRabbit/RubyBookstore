%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.log_in')
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon', method: :post do
      %i.fa.fa-facebook-official.fa-lg
    %p.general-login-text or
    .general-form.field
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: "form-control" }}) do |f|
        .form-group.mb-30
          = f.input :email, autofocus: true, autocomplete: "email", placeholder: t('devise.email')
        .form-group.mb-30
          = f.input :password, autocomplete: "password", placeholder: t('devise.password')
          %a.help-block.in-gold-500{href: new_user_password_path}= t('devise.password.forgot_password')
        - if devise_mapping.rememberable?
          .form-group.checkbox.text-center.mb-30
            %label.checkbox-label
              %input.checkbox-input{type: "checkbox", hidden: "true"}
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text= t('devise.sessions.remember')
        .text-center
          = f.submit t('devise.log_in'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('devise.t_have_an_account')
    %a.in-gold-500{href: new_user_registration_path}= t('devise.sign_up')
%script{src: "https://use.fontawesome.com/67602d7308.js"}
