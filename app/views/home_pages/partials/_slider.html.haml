#slider.carousel.slide{'data-ride': "carousel"}
  %ol.carousel-indicators
    - @latest_books.count.times do |index|
      %li{'class': "#{'active' if index.zero?}", 'data-target': "#slider", 'data-slide-to': "#{index}"}
  .carousel-inner{role: "listbox"}
    - @latest_books.each_with_index do |book, index|
      .item.carousel-item{'class': "#{'active' if index.zero?}"}
        .row
          .col-sm-5
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{src: url_for(book.title_image), alt: "design-book"}
          .col-sm-7
            .mb-60
              %h1= book.title.capitalize
              %p.lead= book.description.truncate(250)
              %p.lead.small= book.authors_full_name
              .general-align
                %button.disabled.btn= I18n.t('slider.buy_now')
  %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
    %span.icon-prev{'aria-hidden': "true"}
    %span.sr-only= I18n.t('slider.previous')
  %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
    %span.icon-next{'aria-hidden': "true"}
    %span.sr-only= I18n.t('slider.next')
