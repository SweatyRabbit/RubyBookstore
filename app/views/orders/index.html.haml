%main.container.general-main-wrap
  %h1.mt-0.mb-25 My Orders
  %p.lead.small.mb-10.visible-xs Sort by
  .dropdowns.dropdown.general-order-dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = t("orders.sort.#{params[:state] || Orders::SortOrdersService::DEFAULT_FILTER}")
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        = link_to t('orders.sort.complete'), orders_path(state: 'complete')
      %li
        = link_to t('orders.sort.in_delivery'), orders_path(state: 'in_delivery')
      %li
        = link_to t('orders.sort.delivered'), orders_path(state: 'delivered')
      %li
        = link_to t('orders.sort.canceled'), orders_path(state: 'canceled')
  - if @orders.present?
    .visible-xs
      - @orders.each do |order|
        .general-cart-item.divider-lg-bottom.pt-0
          %table.table
            %tr
              %td.col-half
                %span.in-grey-600 Number
              %td.col-half
                = link_to order.id, order_path(id: order.id), class: 'span general-order-number'
            %tr
              %td
                %span.in-grey-600 Completed at
              %td
                - if order.completed_at.present?
                  %span.in-grey-900.font-16.fw-300= l(order.completed_at)
            %tr
              %td
                %span.in-grey-600 Status
              %td
                %span.font-16.in-grey-900.fw-300= order.decorate.humanized_state
            %tr
              %td
                %span.in-grey-600 Total
              %td
                %strong.font-16= number_to_currency(order.decorate.order_total)
    .hidden-xs.mb-res-50
      %table.table.table-hover
        %thead
          %tr
            %th
              %span.in-grey-600 Number
            %th
              %span.in-grey-600 Completed at
            %th
              %span.in-grey-600 Status
            %th
              %span.in-grey-600 Total
        %tbody
          - @orders.each do |order|
            %tr
              %td
                = link_to order.id, order_path(id: order.id), class: 'span general-order-number'
              %td
                - if order.completed_at.present?
                  %span.in-grey-900.font-16.fw-300= l(order.completed_at)
              %td
                %span.font-16.in-grey-900.fw-300= order.decorate.humanized_state
              %td
                %strong.font-16= number_to_currency(order.decorate.order_total)
  - else
    = t('orders.no_orders')
